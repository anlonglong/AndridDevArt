<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basekonwageview.BaseViewKnowledgeActivity">

    <TextView
        android:id="@+id/view_1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="view"
        android:textColor="@android:color/white"
        android:translationX="-10dp"
        android:translationY="-10dp" />

    <com.allon.customerview.basekonwageview.CustomerView
        android:id="@+id/cv"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark" />

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_marginLeft="50dp">

        <com.allon.customerview.basekonwageview.MyViewGroup
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorPrimary">

            <com.allon.customerview.basekonwageview.MyViewGroupA
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="80dp"
                android:background="@android:color/holo_blue_light">
                <com.allon.customerview.basekonwageview.CustomerView
                    android:layout_width="50dp"
                    android:background="@color/colorAccent"
                    android:layout_height="50dp" />
            </com.allon.customerview.basekonwageview.MyViewGroupA>
        </com.allon.customerview.basekonwageview.MyViewGroup>
    </RelativeLayout>

</LinearLayout>